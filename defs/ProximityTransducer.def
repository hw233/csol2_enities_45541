<root>
	<!-- 接近触发器
		作用：产生一个不能移动的entity，当有entity靠近的时候触发，执行一件事情；
		以后如果把结构搭好，那么就不必再继承于NPC；
	-->
	<Parent>	NPCObject	</Parent>
	<Properties>
		<visible>		<!-- 是否可见 -->
			<Type>			INT8			</Type>
			<Flags>			ALL_CLIENTS		</Flags>
			<Default>		1				</Default>
			<Editable>		true				</Editable>
		</visible>
		<radius>		<!-- 触发半径, 0 表示不触发 -->
			<Type>			FLOAT			</Type>
			<Flags>			ALL_CLIENTS		</Flags>
			<Default>		0.0				</Default>
			<Editable>		true				</Editable>
		</radius>
		<proximityControlID>	<!-- 控制器ID -->
			<Type>			CONTROLLER_ID	</Type>
			<Flags>			CELL_PRIVATE	</Flags>
			<Default>		0				</Default>
		</proximityControlID>
	</Properties>

	<CellMethods>
	</CellMethods>

</root>
